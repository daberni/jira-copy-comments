{
    "manifest_version": 2,
    "name": "JIRA copy comment",
    "short_name": "JIRA copy comment",
    "version": "1.2.0",
    "icons": {
        "128": "icon-128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*.atlassian.net/*",
                "https://*.atlassian.net/*"
            ],
            "js": [
                "script.user.js"
            ],
            "css": [
                "css.user.css"
            ]
        }
    ],
    "web_accessible_resources": [
        "ic_assignment_black_24px.svg",
        "ic_call_split_black_24px.svg"
    ],
    "permissions": [
        "clipboardWrite"
    ]
}