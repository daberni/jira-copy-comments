{
    "manifest_version": 3,
    "name": "JIRA copy comment",
    "short_name": "JIRA copy comment",
    "version": "1.2.1",
    "icons": {
        "128": "icon-128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://*.atlassian.net/*"],
            "js": ["script.user.js"],
            "css": ["css.user.css"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "ic_assignment_black_24px.svg",
                "ic_call_split_black_24px.svg"
            ],
            "matches": [
                "https://*.atlassian.net/*"
            ]
        }
    ],
    "permissions": [
        "clipboardWrite"
    ]
}